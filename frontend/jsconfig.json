{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@pages/*": [
        "src/pages/*"
      ],
      "@common/*": [
        "src/components/common/*"
      ],
      "@script/*": [
        "./src/components/script/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@hooks/*": [
        "src/utils/hooks/*"
      ],
      "@/*": [
        "src/*"
      ],
    },
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}